{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "podziemie2015/multi-client",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "podziemie2015/multi-server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "podziemie2015/multi-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "podziemie2015/multi-nginx",
      "hostname": "nginx", //dla pewnoœci
      "essential": true, //co najmniej jeden kontener musi byæ wymagany, w razie czego reszta siê wy³¹czy
      "portMapping": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [ "client", "server" ],
      "memory": 128
    }
  ]
}